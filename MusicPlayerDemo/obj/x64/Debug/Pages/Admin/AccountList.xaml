<Page
    x:Class="MusicPlayerDemo.Pages.Admin.AccountList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicPlayerDemo.Pages.Admin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel x:ConnectionId='2' x:Name="controlBar" Margin="20, 50" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left" Orientation="Horizontal">
            <SearchBox x:ConnectionId='10' x:Name="mySearchBox" 
                FocusOnKeyboardInput="False"
                                                           
                Width="500"
                FontSize="18"
                Height="45" />
            <ComboBox x:ConnectionId='11' Margin="10, 0"  x:Name="FilterGenderBox" Height="50"                                        PlaceholderText="Pick a gender" Width="200">
                <x:String>All</x:String>
                <x:String>Male</x:String>
                <x:String>Female</x:String>
            </ComboBox>
        </StackPanel>
        <controls:DataGrid x:ConnectionId='3'
            x:Name="AccountListDataGrid"
            HeadersVisibility="Column"
            AutoGenerateColumns="False"
            VerticalScrollBarVisibility="Visible"
            HorizontalScrollBarVisibility="Visible"
            Margin="20, 150, 20, 0"
                                                  
                                        
        >
            <controls:DataGrid.Columns>
                <controls:DataGridTemplateColumn 
                    Header="Action"
                    Width="SizeToHeader"
                     >
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="CheckedUser" Margin="30" Tag="{ Binding id }" />
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
                <controls:DataGridTextColumn 
                    Header="Role" 
                    Width="SizeToCells"
                    Binding="{Binding role}" 
                    FontSize="20" 
                    Tag="role"
                   />
                <controls:DataGridTextColumn 
                    Header="First Name" 
                    Width="SizeToCells"
                    Binding="{Binding firstName}" 
                    FontSize="20" 
                    Tag="firstName"
                    SortDirection="Ascending"/>
                <controls:DataGridTextColumn 
                    Header="Last Name" 
                    Width="SizeToCells"
                    Binding="{Binding lastName}" 
                    FontSize="20" 
                    Tag="lastName"
                    SortDirection="Ascending"/>
                <controls:DataGridTextColumn 
                    Header="Birthday" 
                    Width="SizeToCells"
                    Binding="{Binding birthday}" 
                    FontSize="20" 
                    Tag="birthday"
                    />
                <controls:DataGridTextColumn 
                    Header="Gender" 
                    Width="SizeToHeader"
                    Binding="{Binding gender}" 
                    FontSize="20" 
                    Tag="gender"
                    />
                <controls:DataGridTextColumn 
                    Header="Email" 
                    Width="SizeToCells"
                    Binding="{Binding email}" 
                    FontSize="20" 
                    Tag="email"
                    />
                <controls:DataGridTextColumn 
                    Header="Phone" 
                    Width="SizeToCells"
                    Binding="{Binding phone}" 
                    FontSize="20" 
                    Tag="phone"
                    />
                <controls:DataGridTextColumn 
                    Header="Address" 
                    Width="SizeToCells"
                    Binding="{Binding address}" 
                    FontSize="20" 
                    Tag="address"
                    />
                <controls:DataGridTextColumn 
                    Header="Status" 
                    Width="SizeToHeader"
                    Binding="{Binding status}" 
                    FontSize="20" 
                    Tag="status"
                    />
                <controls:DataGridTextColumn 
                    Header="Status" 
                    Width="SizeToHeader"
                    Binding="{Binding introduction}" 
                    FontSize="20" 
                    Tag="status"
                    />
                <controls:DataGridTextColumn 
                    Header="Status" 
                    Width="SizeToHeader"
                    Binding="{Binding avatar}" 
                    FontSize="20" 
                    Tag="status"
                    />
                <controls:DataGridTemplateColumn 
                    Header="Action"
                    Width="SizeToCells"
                     >
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:ConnectionId='7' Margin="20, 0, 40, 0"                            Tag="{Binding id}">
                                    <SymbolIcon  Symbol="View" /> 
                                </Button>
                                <Button x:ConnectionId='8'                       Tag="{Binding id}">
                                    <SymbolIcon Symbol="Delete" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
            </controls:DataGrid.Columns>
        </controls:DataGrid>
        <StackPanel x:ConnectionId='4' x:Name="LoadingEffect" VerticalAlignment="Center" Visibility="Collapsed">
            <ProgressRing x:ConnectionId='5' x:Name="LoadingPage" IsActive="True" Width="100" Height="100"  />
            <TextBlock Text="Waiting ..." FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 100, 0, 0" />
        </StackPanel>
    </Grid>
</Page>

